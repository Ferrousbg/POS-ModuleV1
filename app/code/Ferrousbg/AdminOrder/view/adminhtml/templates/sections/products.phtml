<?php /** @var \Magento\Backend\Block\Template $block */ ?>
<div class="bg-white p-6 rounded-2xl" x-data="{ showResults: false }">
    <h2 class="text-2xl font-black mb-5 text-slate-800 flex items-center gap-2">
        <span class="text-orange-500">üîç</span> Find Products
    </h2>

    <div class="relative" @click.outside="showResults = false">
        <div class="relative">
            <input type="text"
                   x-model="searchQuery"
                   @input.debounce.300ms="searchProducts(); showResults = true"
                   @focus="showResults = true"
                   placeholder="Scan SKU or type Name..."
                   class="w-full h-16 border-2 border-slate-200 p-4 pl-6 rounded-xl text-2xl font-bold shadow-sm focus:border-orange-500 focus:ring-4 focus:ring-orange-500/10 transition-all text-slate-800"
                   autofocus>

            <!-- Loading Spinner (Orange) -->
            <div x-show="loading" class="absolute right-5 top-5" style="display: none;">
                <svg class="animate-spin h-6 w-6 text-orange-500" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
            </div>
        </div>

        <!-- RESULTS -->
        <div class="w-full mt-3 bg-white border border-slate-200 rounded-xl shadow-lg max-h-[400px] overflow-y-auto"
             x-show="showResults && searchResults.length > 0"
             style="display: none;"
             x-transition:enter="transition ease-out duration-200"
             x-transition:enter-start="opacity-0 -translate-y-2"
             x-transition:enter-end="opacity-100 translate-y-0">

            <div class="grid grid-cols-1 gap-2 p-2 bg-slate-50">
                <template x-for="product in searchResults" :key="product.id">
                    <div class="flex justify-between items-center border border-slate-200 bg-white p-3 rounded-lg hover:border-orange-400 hover:ring-2 hover:ring-orange-500/10 transition cursor-pointer shadow-sm group"
                         @mousedown.prevent="addToCart(product); showResults = true">

                        <div class="flex items-center gap-4 flex-grow">
                            <img :src="product.image" class="h-14 w-14 object-contain bg-white rounded border p-1">
                            <div>
                                <div class="text-lg font-bold text-slate-800 leading-tight group-hover:text-orange-600 transition-colors" x-text="product.name"></div>
                                <div class="flex items-center gap-2 mt-1">
                                    <span class="text-sm font-mono font-bold bg-slate-100 px-2 py-0.5 rounded text-slate-500 border border-slate-200" x-text="product.sku"></span>
                                    <span class="text-sm font-bold text-orange-700 bg-orange-50 px-2 py-0.5 rounded border border-orange-200" x-text="'Stock: ' + product.qty_available"></span>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center gap-4">
                            <button @mousedown.stop="openProductModal(product)" class="p-2 text-slate-400 hover:text-orange-600 hover:bg-orange-50 rounded-lg transition border border-transparent hover:border-orange-200">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                            </button>
                            <div class="font-extrabold text-slate-700 w-24 text-right text-xl" x-text="formatPrice(product.price)"></div>
                            <!-- Orange Plus Button -->
                            <button class="bg-orange-500 hover:bg-orange-600 text-white h-12 w-12 rounded-xl flex items-center justify-center shadow-lg shadow-orange-500/30 font-bold text-2xl transition active:scale-95">+</button>
                        </div>
                    </div>
                </template>
            </div>
        </div>

        <div x-show="showResults && searchResults.length === 0 && searchQuery.length > 2 && !loading" class="mt-2 w-full bg-white p-6 shadow-sm rounded-xl text-center text-slate-500 border border-slate-200">
            <p class="text-lg font-bold">No products found</p>
        </div>
    </div>
</div>