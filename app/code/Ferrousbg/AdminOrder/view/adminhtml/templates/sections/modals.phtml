<!-- PRODUCT MODAL (Orange Theme) -->
<div x-cloak x-show="productModalOpen"
     class="fixed inset-0 z-[100] flex items-center justify-center bg-black bg-opacity-70 backdrop-blur-sm"
     @click.self="productModalOpen = false">

    <div class="bg-white rounded-2xl shadow-2xl w-[900px] max-w-[95vw] max-h-[90vh] overflow-hidden flex flex-col border-4 border-orange-500">

        <!-- Header -->
        <div class="bg-orange-500 px-6 py-4 border-b border-orange-600 flex justify-between items-center text-white">
            <h3 class="text-2xl font-black uppercase tracking-wide">Product Details</h3>
            <button @click="productModalOpen = false" class="text-3xl font-bold hover:text-orange-200 transition">&times;</button>
        </div>

        <!-- Body -->
        <div class="p-8 flex-grow overflow-auto">
            <h2 x-text="selectedProduct?.name" class="text-3xl font-black text-slate-800 mb-6"></h2>

            <div class="flex items-center gap-4 mb-8">
                <div class="text-4xl font-black text-orange-600" x-text="formatPrice(selectedProduct?.price)"></div>
                <div class="bg-orange-100 text-orange-700 px-3 py-1 rounded-lg font-bold text-sm" x-text="'SKU: ' + selectedProduct?.sku"></div>
            </div>

            <div class="grid grid-cols-2 gap-4 text-slate-600 text-lg mb-8">
                <div><strong>Stock:</strong> <span x-text="selectedProduct?.qty_available"></span></div>
            </div>

            <!-- Add to Cart Button -->
            <button @click="addToCart(selectedProduct); productModalOpen = false"
                    class="bg-orange-600 hover:bg-orange-700 text-white w-full py-5 font-black text-2xl rounded-xl shadow-lg shadow-orange-500/30 transition transform active:scale-[0.98]">
                ADD TO CART
            </button>
        </div>
    </div>
</div>

<!-- CUSTOMER SEARCH MODAL (Orange Theme - Backup if needed) -->
<div x-cloak x-show="customerModalOpen"
     class="fixed inset-0 z-[110] flex items-center justify-center bg-black bg-opacity-60 backdrop-blur-sm"
     @click.self="customerModalOpen = false">

    <div class="bg-white rounded-2xl shadow-2xl w-[800px] max-w-[95vw] max-h-[85vh] flex flex-col border border-orange-200">

        <!-- Header -->
        <div class="p-5 border-b border-orange-100 bg-orange-50 rounded-t-2xl flex justify-between items-center">
            <h3 class="text-xl font-black text-slate-800 uppercase flex items-center gap-2">
                <span class="text-orange-500">üîç</span> Find Customer
            </h3>
            <button @click="customerModalOpen = false" class="text-2xl text-slate-400 hover:text-orange-500">&times;</button>
        </div>

        <!-- Search Input -->
        <div class="p-4 bg-white border-b border-slate-100">
            <input type="text"
                   x-model="customerSearchQuery"
                   @input.debounce.300ms="searchCustomers()"
                   x-ref="customerSearchInput"
                   placeholder="Search by Name, Email or Phone..."
                   class="w-full border-2 border-slate-200 p-4 rounded-xl text-lg font-bold focus:border-orange-500 focus:ring-4 focus:ring-orange-500/10 outline-none transition-all">
        </div>

        <!-- Results -->
        <div class="flex-grow overflow-y-auto p-4 bg-slate-50 custom-scroll">
            <template x-for="c in customerResults" :key="c.id">
                <div @click="selectCustomer(c); customerModalOpen = false"
                     class="bg-white border border-slate-200 p-4 rounded-xl mb-2 hover:border-orange-500 hover:shadow-md cursor-pointer flex justify-between items-center group transition-all">

                    <div>
                        <div class="font-bold text-lg text-slate-800 group-hover:text-orange-700" x-text="c.firstname + ' ' + c.lastname"></div>
                        <div class="text-sm text-slate-500" x-text="c.email"></div>
                    </div>

                    <button class="bg-slate-100 text-slate-600 group-hover:bg-orange-500 group-hover:text-white px-4 py-2 rounded-lg text-sm font-bold transition-colors">
                        Select
                    </button>
                </div>
            </template>

            <div x-show="customerResults.length === 0" class="text-center py-12 text-slate-400">
                <div class="text-4xl mb-2 opacity-30">üìÇ</div>
                No results found
            </div>
        </div>
    </div>
</div>
