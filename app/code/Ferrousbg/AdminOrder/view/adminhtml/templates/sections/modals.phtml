            </div>

            <!-- TAB 1: ORDERS -->
            <div x-show="!isLoadingHistory && historyTab === 'orders'">
                <template x-if="!customerHistoryOrders || customerHistoryOrders.length === 0">
                    <div class="text-center py-20 opacity-50">
                        <div class="text-8xl mb-6">üõí</div>
                        <div class="text-2xl font-black text-slate-400 uppercase">–ù—è–º–∞ –Ω–∞–º–µ—Ä–µ–Ω–∏ –ø–æ—Ä—ä—á–∫–∏</div>
                    </div>
                </template>

                <!-- Grid –∑–∞ –ø–æ—Ä—ä—á–∫–∏—Ç–µ (–ø–æ 2 –Ω–∞ —Ä–µ–¥ –∑–∞—Ä–∞–¥–∏ —à–∏—Ä–∏–Ω–∞—Ç–∞) -->
                <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
                    <template x-for="order in customerHistoryOrders" :key="order.id">
                        <div class="bg-white p-6 rounded-2xl border-2 border-slate-100 shadow-sm flex justify-between items-center hover:shadow-md transition-all hover:border-orange-300 group cursor-default">
                            <div class="flex items-center gap-5">
                                <div class="bg-orange-50 text-orange-600 font-black text-xl w-20 h-20 rounded-2xl flex items-center justify-center border-2 border-orange-100">
                                    <div class="text-center">
                                        <span class="text-[10px] text-orange-300 block uppercase tracking-wider mb-0.5">ORD</span>
                                        <span x-text="order.increment_id ? order.increment_id.slice(-4) : '...'"></span>
                                    </div>
                                </div>
                                <div>
                                    <div class="font-black text-slate-800 text-xl mb-1">–ü–æ—Ä—ä—á–∫–∞ #<span x-text="order.increment_id"></span></div>
                                    <div class="text-sm font-bold text-slate-400 uppercase tracking-wide flex items-center gap-2">
                                        <span>üìÖ <span x-text="order.date"></span></span>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right flex flex-col items-end gap-2">
                                <div class="font-black text-3xl text-slate-800 tracking-tight" x-text="order.total"></div>
                                <span class="inline-block px-4 py-1.5 rounded-lg text-xs font-black uppercase tracking-wide"
                                      :class="order.status === 'Complete' ? 'bg-green-100 text-green-700' : 'bg-slate-100 text-slate-600'"
                                      x-text="order.status"></span>
                                <a :href="order.view_url" target="_blank" class="text-xs font-bold text-indigo-500 hover:text-indigo-700 hover:underline uppercase tracking-wide mt-1 flex items-center gap-1">
                                    –ü—Ä–µ–≥–ª–µ–¥ ‚Üó
                                </a>
                            </div>
                        </div>
                    </template>
                </div>
            </div>

            <!-- TAB 2: REQUESTS -->
            <div x-show="!isLoadingHistory && historyTab === 'requests'">
                <template x-if="!customerHistoryRequests || customerHistoryRequests.length === 0">
                    <div class="text-center py-20 opacity-50">
                        <div class="text-8xl mb-6">üè≠</div>
                        <div class="text-2xl font-black text-slate-400 uppercase">–ù—è–º–∞ –ø—Ä–æ–∏–∑–≤–æ–¥—Å—Ç–≤–µ–Ω–∏ –∑–∞—è–≤–∫–∏</div>
                    </div>
                </template>

                <!-- Grid –∑–∞ –∑–∞—è–≤–∫–∏—Ç–µ -->
                <div class="grid grid-cols-1 gap-5">
                    <template x-for="req in customerHistoryRequests" :key="req.id">
                        <div class="bg-white p-8 rounded-3xl border-2 border-slate-100 shadow-sm hover:shadow-lg transition-all hover:border-blue-300 group">
                            <div class="flex justify-between items-start mb-6 border-b border-slate-100 pb-5">
                                <div class="flex items-center gap-4">
                                    <span class="bg-blue-600 text-white px-4 py-2 rounded-xl text-lg font-black uppercase tracking-wide shadow-blue-200 shadow-lg">REQ #<span x-text="req.id"></span></span>
                                    <span class="text-base font-bold text-slate-400 uppercase tracking-wide flex items-center gap-2">
                                        üïí <span x-text="req.date"></span>
                                    </span>
                                </div>
                                <span class="px-5 py-2 rounded-xl text-sm font-black uppercase tracking-wider"
